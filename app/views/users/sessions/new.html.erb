<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="card-group ">
  <div class="card p-4">
    <div class="card-block">
      <h1>Login</h1>
      <p class="text-muted">Sign In to your account</p>
      <div class="input-group mb-3">
        <span class="input-group-addon"><i class="icon-user"></i></span>
        <%= f.input_field :email, label: false, class: 'form-control', required: false, autofocus: true, placeholder: 'Username' %>
      </div>
      <div class="input-group mb-4">
        <span class="input-group-addon"><i class="icon-lock"></i></span>
        <%= f.input_field :password, label: false, class: 'form-control', required: false, placeholder: 'Password' %>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.button :submit, "Login", class: 'btn btn-primary px-4' %>
        </div>
        <div class="col-md-6 text-md-right">
          <button type="button" class="btn btn-link px-0">Forgot password?</button>
        </div>
      </div>
    </div>
  </div>
  <div class="card card-inverse card-primary py-5" style="width:44%">
    <div class="card-block text-md-center">
      <div>
        <h2>Sign up</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        <button type="button" class="btn btn-primary active mt-3">Register Now!</button>
      </div>
    </div>
  </div>
</div>
<% end %>
